{#
/**
 * @file
 *
 * Theme implementation for a two column layout.
 */
#}

{% if content|render|trim %}
  <div{{ attributes.addClass(classes) }}>
    <div {{ region_attributes.first.addClass('layout__region', 'layout__region--first') }} {% if not region_attributes.first %} class="layout__region layout__region--first" {% endif %}>
      {% if content.first %}
          {{ content.first }}
      {% endif %}
    </div>

    <div {{ region_attributes.second.addClass('layout__region', 'layout__region--second') }} {% if not region_attributes.second %} class="layout__region layout__region--second" {% endif %}>
      {% if content.second %}
          {{ content.second }}
      {% endif %}
    </div>

    <div {{ region_attributes.three.addClass('layout__region', 'layout__region--three') }} {% if not region_attributes.three %} class="layout__region layout__region--three" {% endif %}>
      {% if content.three %}
          {{ content.three }}
      {% endif %}
    </div>

    <div {{ region_attributes.four.addClass('layout__region', 'layout__region--four') }} {% if not region_attributes.four %} class="layout__region layout__region--four" {% endif %}>
      {% if content.four %}
          {{ content.four }}
      {% endif %}
    </div>

  </div>

{% endif %}
